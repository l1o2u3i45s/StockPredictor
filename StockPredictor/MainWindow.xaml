<Window x:Class="StockPredictor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockPredictor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="股票篩選" >
                <Grid Background="{StaticResource AccordionBackgroundBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="3*"/> 
                    </Grid.ColumnDefinitions>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="10">
                            <DatePicker FontSize="18" VerticalAlignment="Center" Text="{Binding StartTime}"></DatePicker>
                            <TextBlock FontSize="18" Margin="5,0,0,0" VerticalAlignment="Center" Text="~"></TextBlock>
                            <DatePicker FontSize="18" VerticalAlignment="Center" Text="{Binding EndTime}"></DatePicker>
                        </StackPanel>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding FilterInfoCollection}">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <GroupBox Header="Filter" Margin="10">
                                        <ItemsPresenter/>
                                    </GroupBox>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel Margin="10,5,0,0"> 
                                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}"></CheckBox>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Grid.Row="2" Margin="10" Content="Analysis" Command="{Binding AnalysisCommand}"></Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="個股分析">
                
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>

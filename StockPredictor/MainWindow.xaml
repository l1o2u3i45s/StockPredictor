<Window x:Class="StockPredictor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockPredictor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="MainWindow" Height="800" Width="1600">
    <Grid>
        <TabControl>
            <TabItem Header="股票篩選" >
                <Grid Background="{StaticResource AccordionBackgroundBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="10">
                            <DatePicker FontSize="18" VerticalAlignment="Center"  DisplayDate="{Binding StartTime}"
                                        SelectedDate="{Binding StartTime, Mode=TwoWay}"/>
                            <TextBlock FontSize="18" Margin="5,0,0,0" VerticalAlignment="Center" Text="~"/>
                            <DatePicker FontSize="18" VerticalAlignment="Center"  DisplayDate="{Binding EndTime}"
                                        SelectedDate="{Binding EndTime, Mode=TwoWay}"/>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <ItemsControl Grid.Column="0" ItemsSource="{Binding AlgoStrategyCollection,UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.Template>
                                    <ControlTemplate TargetType="ItemsControl">
                                        <GroupBox Header="演算法策略" Margin="10">
                                            <ItemsPresenter/>
                                        </GroupBox>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                                                <RadioButton GroupName="Strategy" IsChecked="{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}" Content="{Binding Name}"></RadioButton>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding SeletedAlgoStratrgy.FilterInfoList,UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.Template>
                                    <ControlTemplate TargetType="ItemsControl">
                                        <GroupBox Header="Filter" Margin="10">
                                            <ItemsPresenter/>
                                        </GroupBox>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                                                <CheckBox Content="{Binding TypeName}" IsChecked="{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}"/>
                                                <TextBox Width="60" IsEnabled="{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}" Text="{Binding Param,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    

                        <Button Grid.Row="2" Margin="10" Content="Analysis" Command="{Binding AnalysisCommand}"></Button>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <ItemsControl ItemsSource="{Binding StockInfoCollection}">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <GroupBox Header="資料回測" Margin="10">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </GroupBox>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid   Margin="10,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock >
                                                <Run Text="股票代碼:"></Run>
                                                <Run Text="{Binding ID}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock >
                                                <Run Text=" 名稱:"></Run>
                                                <Run Text="{Binding Name}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <TextBlock >
                                                <Run Text=" 日期:"></Run>
                                                <Run Text="{Binding Date,StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                <TextBlock >
                                                <Run Text=" 該日價:"></Run>
                                                <Run Text="{Binding ClosePrice}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                                <TextBlock >
                                                <Run Text="現價:"></Run>
                                                <Run Text="{Binding CurrentClosePrice}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="5" Orientation="Horizontal">
                                                <TextBlock >
                                                <Run Text="價差:"></Run>
                                                <Run Text="{Binding CloseDiffValue,Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="6" Orientation="Horizontal">
                                                <TextBlock >
                                                    <Run Text="成長率:"></Run>
                                                    <Run Text="{Binding GrowRatio,Mode=OneWay}"/>
                                                    <Run Text="%"></Run>
                                                </TextBlock>
                                            </StackPanel>


                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel  Grid.Row="1" Orientation="Horizontal"   Margin="10">
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="買入金額:" FontSize="20"/>
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="{Binding TotalSumResult.TotalPrice}" FontSize="20"/>

                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="          價差:" FontSize="20"/>
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="{Binding TotalSumResult.DiffPrice }" FontSize="20"/>

                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="          成長率:" FontSize="20"/>
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="{Binding TotalSumResult.GrowRatio  }" FontSize="20"/>
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="%" FontSize="20"/>


                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="          獲利張數:" FontSize="20"/>
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="{Binding TotalSumResult.WinAmount }" FontSize="20"/>


                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="          虧損張數:" FontSize="20"/>
                            <TextBlock  Foreground="{StaticResource  AccordionBorderBrush}" Text="{Binding TotalSumResult.LoseAmount }" FontSize="20"/>

                        </StackPanel>

                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="個股分析">

            </TabItem>
        </TabControl>

    </Grid>
</Window>
